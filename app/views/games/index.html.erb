<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rule text</th>
      <th>Detalle</th>
      <th>Editar</th>
      <th>Imagen Juego</th>
      <th>Rules pdf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.rule_text %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <% if game.box_image.attached? %>
          <td><%= image_tag game.box_image.variant(monochrome: true, resize: "100x100").processed %></td> 
        <% end %>
        <td><%= link_to("Descarga aqui", rails_blob_path(game.rules_pdf), disposition: 'attachment') %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

